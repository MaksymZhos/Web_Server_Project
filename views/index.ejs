<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Portfolio</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <nav>
            <% if (isAuthenticated) { %>
                <a href="/edit">Edit Profile</a>
                <a href="/logout">Logout</a>
            <% } else { %>
                <a href="/login">Login</a>
            <% } %>
        </nav>
    </header>

    <main>
        <% if (user) { %>
            <section id="about">
                <h1><%= user.name %></h1>
                <p><%= user.about || 'No about information' %></p>
            </section>

            <section id="projects">
                <h2>Projects</h2>
                <% if (user.projects && user.projects.length > 0) { %>
                    <% user.projects.forEach(project => { %>
                        <div class="project">
                            <h3><%= project.title %></h3>
                            <p><%= project.description %></p>
                            <% if (project.link) { %>
                                <a href="<%= project.link %>">View Project</a>
                            <% } %>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No projects added yet.</p>
                <% } %>
            </section>

            <section id="contact">
                <h2>Contact</h2>
                <% if (user.contact) { %>
                    <p>Email: <%= user.contact.email || 'N/A' %></p>
                    <p>GitHub: <%= user.contact.github || 'N/A' %></p>
                    <p>LinkedIn: <%= user.contact.linkedin || 'N/A' %></p>
                <% } %>
            </section>
        <% } else { %>
            <p>Please log in to view profile</p>
        <% } %>
    </main>
</body>
</html>
